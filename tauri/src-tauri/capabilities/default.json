{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "fs:allow-read-file",
    "fs:allow-write-file",
    "fs:allow-read-dir",
    "fs:allow-copy-file",
    "fs:allow-mkdir",
    "fs:allow-remove",
    "fs:allow-rename",
    "fs:allow-exists",
    "fs:allow-home-read",
    "fs:allow-home-write",
    "fs:allow-document-read",
    "fs:allow-document-write",
    {
      "identifier": "fs:scope",
      "allow": [{"path": "$HOME"}, {"path": "$HOME/**"}, {"path": "$DOCUMENT"}, {"path": "$DOCUMENT/**"}]
    }
  ]
}
